<div class="container">

  <div class="col-12 col-md-6 p-2 mt-5 bg-white">
    <h1>Friends</h1>
  </div>
  
  <div class="col-12 col-md-6 p-2 mt-5 bg-white incoming">
    Incoming
    <% current_user.friend_request.each do | user |  %>
      <%= link_to  user.name, user_path(user.id) %>
      <%= link_to  "Accept", friendship_path(id: user.friendship_id(current_user), user_id: user.id ), method: 'patch'%>
    <% end %>
  </div>

  <div class="col-12 col-md-6 p-2 mt-5 bg-white pending">
    Pending
    <% current_user.pending_friends.each do |user|  %>
      <%= link_to  user.name, user_path(user.id) %>
    <% end %>
  </div>

  <div class="col-12 col-md-6 p-2 mt-5 bg-white friends">
    Friends
    <% current_user.friends.each do | user |  %>
      <%= link_to  user.name, user_path(user.id) %>
      <%= link_to  "Delete", friendship_path(id: user.friendship_id(current_user), user_id: user.id ), method: 'delete'%>
    <% end %>
  </div>
</div>